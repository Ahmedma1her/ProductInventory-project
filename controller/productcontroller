const product=require("../models/Product")

const addProduct= async (req,res)=>{
   try{
    const product= await Product.create(req.body)
    res.status(200).json({
        success: true,
        data: product,
        msg:"product added to database"
    })
} catch (error) {
    res.status(400).json({
        success: false,
    msg: error})
}  
}


const getProduct= async (req,res)=>{try {
        const product= await Product.find({category:"Electronics"})
          res.status(200).json({
        success: true,
        data: product,
        msg:"product found"
    })
    } catch (error) {
         res.status(400).json({
        success: false,
    msg: error})
    }
}
module.exports={addProduct,getProduct}